async def get_${table}(${table}_id=-1):
    filters = [${Table}.is_delete == 0]
    if ${table}_id != -1:
        filters.append(${Table}.${table}_id == ${table}_id)
    data = await ${table}_mysql.get_${table}(
        query_list=[${Table}],
        filters=filters,
    )
    return data

