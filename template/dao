async def delete_${table}(${table}_id=-1):
    filters = []
    if ${table}_id != -1:
        filters.append(${Table}.${table}_id == ${table}_id)
    # ${table}_mysql.delete_${table}(
    #     filters=filters
    # )
    await ${table}_mysql.update_${table}(
        filters=filters,
        data_dict={
            'is_delete': 1,
            'mtime': com_func.get_ts()
        }
    )

